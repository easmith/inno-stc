<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="models.hbn.Student" table="students">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" length="32" not-null="true" unique="false" />
        </property>
        <property name="age" type="java.lang.Integer">
            <column name="age" not-null="false" unique="false" />
        </property>
        <property name="group" type="java.lang.Integer">
            <column name="group_id" not-null="false" unique="false" />
        </property>
    </class>
</hibernate-mapping>